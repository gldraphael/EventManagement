@page
@model Eventuras.Pages.Admin.Registrations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="bg-gray-200 py-3">
    <div class="container">
        <h2>Registreringer</h2>

        <p>
            <a asp-page="Create" class="btn btn-success">Legg til ny</a>
        </p>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                    <th>
                        Deltaker
                    </th>
                    <th>
                        Betaler
                    </th>
                    <th>
                        Gratis?
                    </th>
                    <th>
                        Arrangement
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Registrations) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ParticipantName) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FreeRegistration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventInfo.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RegistrationId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.RegistrationId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RegistrationId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>