@page
@model Eventuras.Pages.Admin.Temp.ProductVariants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductVariant[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductVariant[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductVariant[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductVariant[0].VatPercent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductVariant[0].AdminOnly)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductVariant[0].Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductVariant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VatPercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminOnly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProductVariantId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProductVariantId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProductVariantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
